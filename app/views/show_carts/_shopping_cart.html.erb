<% if @cart_items.empty? %>
  <p>
    <%= t "carts.empty_cart" %>
    <%= link_to t("shop"), products_path %>
    <%= t "carts.empty_cart2" %>
  </p>
<% else %>
  <table class="table table-hover">
    <thead class="thead-dark">
      <tr>
        <th></th>
        <th scope="col"><%= t "carts.product_name" %></th>
        <th scope="col"><%= t "carts.price" %></th>
        <th scope="col"><%= t "carts.quantity" %></th>
      </tr>
    </thead>
    <tbody>
    <% @cart_items.each do |cart_item| %>
      <%= render "show_carts/cart_row", product: cart_item.product, cart_item: cart_item %>
    <% end %>
    </tbody>
  </table>
<% end %>
