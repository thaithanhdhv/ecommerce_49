<h1><%= t "invoice" %></h1>
<div class="container">
  <div  class="row pad-top-botm client-info">
    <div class="col-lg-6 col-md-6 col-sm-6">
      <b><%= t ".purchase_date:" %></b> <%= l @order.created_at,
        format: t("date.format.default") %>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
            <tr>
              <th><%= t ".id" %></th>
              <th><%= t ".name" %></th>
              <th><%= t ".quantity" %></th>
              <th><%= t ".unit_price" %></th>
              <th><%= t ".total_price" %></th>
             </tr>
           </thead>
           <tbody>
            <%= render partial: "order_detail", collection: @order_details, as: :order_detail %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="row pad-top-botm">
    <div class="col-lg-12 col-md-12 col-sm-12">
      <hr />
      <%= link_to t(".back"), :back, class: "btn btn-primary" %>
      <%= link_to t(".continue_shopping"), products_path, class: "btn btn-warning" %>
    </div>
  </div>
</div>
