<header class="navbar navbar-expand-lg navbar-light">
  <div class="container">
    <%= link_to (image_tag "logo.png"), root_path, class: "logo navbar-brand" %>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#main-menu" aria-controls="main-menu" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="main-menu">
      <ul class="navbar-nav navbar-right">
        <li><%= link_to t("home"), root_path %></li>
        <li><%= link_to t("shop"), "#" %></li>
        <% if logged_in? %>
        <li class="dropdown x-menu">
          <%= link_to t("account"), "#" %><i class="fa fa-caret-down"></i>
          <ul class="dropdown-menu">
            <li><%= link_to t("profile"), current_user %></li>
            <li>
              <%= link_to t(".logout"), logout_path, method: :delete %>
            </li>
          </ul>
        </li>
        <% else %>
          <li><%= link_to t("sessions..new.title"), login_path %></li>
        <% end %>
        <li class="shopping-cart"><i class="fa fa-shopping-cart"></i></li>
      </ul>
    </div>
  </div>
</header>
