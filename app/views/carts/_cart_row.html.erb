<tr>
<td class="product-image"><%= image_tag("product-53.jpg", class: "product-image") %></td>
<td><%= product.title %></td>
<td><%= number_to_currency product.price %></td>
<td>
<%= form_for order_item, remote: true do |f| %>
  <%= f.number_field :quantity, value: order_item.quantity.to_i, class: "form-control", min: 1 %>
  <%= f.hidden_field :product_id, value: product.id %>
  <%= f.submit t("update"), class: "btn btn-primary" %>
  <%= link_to t("users.index.delete"), order_item, {data: {confirm: t("carts.delete_confirm")}, method: :delete, remote: true, class: "btn btn-danger" } %>
<% end %>
</td>
</tr>

